
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using  WebApp.Models
@using Common
@model List<BookInfo>

<div class="text-center">
    <table class="table">
        <tr>
            <th>Название</th>
            <th>Жанр</th>
            <th>Год</th>

        </tr>
        @foreach (var d in Model)
         {
    <tr>
        <td>@d.Title</td>
        <td>@d.Writers</td>
        <td>@d.Genre.GetEnumDescription()</td>
        <td>@d.Year</td>

        <td>@Html.ActionLink("Информация", "GetFullInfo", "Book", new { Id = d.BookId }, new { type = "button", @class = "btn btn-success" })</td>

    </tr>
         }
    </table>
</div>


@section Scripts{ 
    <script>
        $(document).ready(function() {
            $("#btn1").click(function () {
                var text = $(this).find('p').text();
                //var text = $(this).text();
                alert(text);
            });
        });
    </script>
}